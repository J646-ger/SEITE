---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Taschenrechner";
---

<BaseLayout pageTitle={pageTitle}>
  <br />
  <body>
    <form name="calculator">
      <div class="TR box-content case">
        <div class="case border-4 border-black">
          <input type="textfield" name="ans" value="" class="sol" />
        </div>
        <div
          class="grid grid-cols-4 gap-3 bg-gray-700 p-6 items-center justify-items-center border-4 border-black case"
        >
          <a></a>
          <a></a>
          <input
            type="reset"
            value="C"
            class="col-start-3 w-12 h-12 text-white bg-purple-700 hover:bg-purple-800 font-medium rounded-full text-sm text-center"
          />

          <input
            type="button"
            value="/"
            class="w-12 h-12 text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='/'"
          />

          <input
            type="button"
            value="7"
            class="w-12 h-12 text-white bg-gray-800 hover:bg-gray-900 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='7'"
          />

          <input
            type="button"
            value="8"
            class="w-12 h-12 text-white bg-gray-800 hover:bg-gray-900 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='8'"
          />
          <input
            type="button"
            value="9"
            class="w-12 h-12 text-white bg-gray-800 hover:bg-gray-900 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='9'"
          />

          <input
            type="button"
            value="*"
            class="w-12 h-12 text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='*'"
          />

          <input
            type="button"
            value="4"
            class="w-12 h-12 text-white bg-gray-800 hover:bg-gray-900 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='4'"
          />

          <input
            type="button"
            value="5"
            class="w-12 h-12 text-white bg-gray-800 hover:bg-gray-900 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='5'"
          />

          <input
            type="button"
            value="6"
            class="w-12 h-12 text-white bg-gray-800 hover:bg-gray-900 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='6'"
          />

          <input
            type="button"
            value="-"
            class="w-12 h-12 text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='-'"
          />

          <input
            type="button"
            value="1"
            class="w-12 h-12 text-white bg-gray-800 hover:bg-gray-900 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='1'"
          />

          <input
            type="button"
            value="2"
            class="w-12 h-12 text-white bg-gray-800 hover:bg-gray-900 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='2'"
          />

          <input
            type="button"
            value="3"
            class="w-12 h-12 text-white bg-gray-800 hover:bg-gray-900 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='3'"
          />

          <input
            type="button"
            value="+"
            class="w-12 h-12 text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-full text-sm text-center text-center"
            onClick="document.calculator.ans.value+='+'"
          />
          <a></a>
          <input
            type="button"
            value="0"
            class="col-start-2 w-12 h-12 text-white bg-gray-800 hover:bg-gray-900 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='0'"
          />

          <input
            type="button"
            value="."
            class="w-12 h-12 text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value+='.'"
          />

          <input
            type="button"
            value="="
            class="w-12 h-12 text-white bg-purple-700 hover:bg-purple-800 font-medium rounded-full text-sm text-center"
            onClick="document.calculator.ans.value=eval(document.calculator.ans.value)"
          />
        </div>
      </div>
    </form>
  </body>
</BaseLayout>
